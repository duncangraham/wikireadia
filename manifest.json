{
  "manifest_version": 2,

  "name": "wikireadia",
  "description": "An extension to make reading wikipedia articles in the browser nicer",
  "icons": { "128": "icon.png" },
  "version": "1.0",
  "homepage_url": "https://github.com/duncangraham/wikireadia",

  "content_scripts": [
      {
        "matches": ["*://*.wikipedia.org/*"],
        "js": ["main.js"],
        "run_at": "document_start"
      }
    ]
}
